<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ten_dp"
    tools:activity="com.appzonegroup.app.fasttrack.CardBasedWithdrawalActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <com.appzonegroup.app.fasttrack.ui.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawal_amount"/>

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/withdrawal_amount_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/amount_hint"
            android:inputType="numberDecimal"
            android:layout_marginBottom="@dimen/fifteen_dp"/>

        <Button
            android:id="@+id/withdraw_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/withdraw"
            style="@style/button_style"
            android:onClick="withdraw_button_click"/>
    </LinearLayout>


</ScrollView>
