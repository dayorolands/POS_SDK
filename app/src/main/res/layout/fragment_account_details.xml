<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<AutoCompleteTextView-->
            <!--android:id="@+id/accountDetails_institutionCodeactv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/defaultEditText"/>-->

        <com.cluster.ui.EditText
            android:id="@+id/accountDetails_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_phone_number_hint"
            android:inputType="number"
            style="@style/defaultEditText"
            android:maxLength="11"/>


        <com.cluster.ui.EditText
            android:id="@+id/accountDetails_accountNumber_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            style="@style/defaultEditText"
            android:hint="@string/customer_account_number_hint"
            android:inputType="number"/>

        <com.cluster.ui.CustomButton
            android:id="@+id/basicinfo_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            style="@style/button_style"
            android:background="@drawable/gradient_warning"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:onClick="next_button_click"/>

    </LinearLayout>

</ScrollView>