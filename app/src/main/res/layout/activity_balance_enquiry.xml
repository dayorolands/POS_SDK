<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        tools:context=".BalanceEnquiryActivity"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.appzonegroup.app.fasttrack.ui.EditText
                android:id="@+id/pin_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:hint="@string/agentPIN_hint"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <com.appzonegroup.app.fasttrack.ui.CustomButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:onClick="onClick"
                android:text="@string/submit" />

            <include layout="@layout/horizontal_line" />


            <com.appzonegroup.app.fasttrack.ui.TextView
                android:id="@+id/agents_bal_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/ten_dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/agent_s_balance"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:visibility="invisible" />

            <com.appzonegroup.app.fasttrack.ui.TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/large_sized_text"
                android:textStyle="bold" />

            <com.appzonegroup.app.fasttrack.ui.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/ten_dp"
                android:gravity="center"
                android:id="@+id/available_balance_label"
                android:padding="16dp"
                android:text="Available Balance"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:visibility="invisible" />

            <com.appzonegroup.app.fasttrack.ui.TextView
                android:id="@+id/available_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/large_sized_text"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</layout>