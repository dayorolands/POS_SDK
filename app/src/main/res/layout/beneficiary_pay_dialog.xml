<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/beneficiary_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"

        android:layout_margin="5dp"
        android:textAllCaps="true"
        android:text="Confirm"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">



        <TextView
            android:id="@+id/beneficiary_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Please confirm payment"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/fifteen_dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/beneficiary_dialog_yes_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Confirm"
            android:layout_weight="1"
            android:layout_marginRight="1dp"/>

        <Button
            android:id="@+id/beneficiary_dialog_no_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Decline"
            style="@style/button_warning_style"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"/>



    </LinearLayout>
    <Button
        android:id="@+id/beneficiary_dialog_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Ok"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_marginTop="2dp"/>

</LinearLayout>