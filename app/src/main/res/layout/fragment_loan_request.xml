<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:activity="com.appzonegroup.app.fasttrack.CreditClubLoanRequestActivity$FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/loanRequest_customerAccount_et"
            style="@style/defaultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:enabled="false"
            android:hint="@string/enterAccountNumber"
            android:inputType="number"
            android:maxLength="10" />

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/loanRequest_phoneno_et"
            style="@style/defaultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:background="@drawable/edittext_bg"
            android:enabled="false"
            android:hint="@string/phoneNumber_hint"
            android:inputType="phone"
            android:maxLength="11" />

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/loanRequest_loanAmount_et"
            style="@style/defaultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:hint="@string/transactionAmount"
            android:inputType="numberDecimal" />

        <!--<AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/defaultEditText"
            android:id="@+id/loanRequest_marketAssociations_actv"/>-->

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/loanRequest_marketAssociations_et"
            style="@style/defaultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:hint="@string/enterassociationid"
            android:inputType="number" />

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/loanRequest_memberID_et"
            style="@style/defaultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:hint="@string/memberID"
            android:inputType="number" />

        <com.appzonegroup.app.fasttrack.ui.CustomButton
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="3dp"
            android:background="@drawable/gradient_warning"
            android:onClick="next_button_click"
            android:text="@string/next" />

    </LinearLayout>

</ScrollView>
