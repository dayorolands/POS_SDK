<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.appzonegroup.app.fasttrack.ui.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="Send Token"/>

    <com.appzonegroup.app.fasttrack.ui.EditText
        android:layout_width="match_parent"
        android:id="@+id/customer_phone_et"
        android:layout_height="wrap_content"
        style="@style/defaultEditText"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="@string/phoneNo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.appzonegroup.app.fasttrack.ui.CustomButton
            android:id="@+id/cancel_btn"
            android:text="@string/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_margin_horizontal"
            android:layout_marginRight="@dimen/form_margin_horizontal"
            android:background="@drawable/gradient_primary"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:layout_marginBottom="20dp"
            style="@style/button_style"/>
        <com.appzonegroup.app.fasttrack.ui.CustomButton
            android:layout_weight="2"
            android:id="@+id/ok_btn"
            android:text="@string/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_margin_horizontal"
            android:layout_marginRight="@dimen/form_margin_horizontal"
            android:background="@drawable/gradient_warning"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            style="@style/button_style"/>
    </LinearLayout>


</LinearLayout>