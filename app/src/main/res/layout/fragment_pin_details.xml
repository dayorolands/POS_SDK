<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">
    <com.cluster.ui.EditText
        android:id="@+id/old_pin_et"
        android:hint="@string/old_pin"
        style="@style/defaultEditText"
        android:layout_width="match_parent"
        android:maxLength="4"
        android:layout_height="wrap_content"
        android:inputType="numberPassword" />

    <com.cluster.ui.EditText
        android:id="@+id/new_pin_et"
        android:hint="@string/new_pin"
        style="@style/defaultEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:maxLength="4"/>


    <com.cluster.ui.EditText
        android:id="@+id/confirm_new_pin_et"
        style="@style/defaultEditText"
        android:hint="@string/confirm_new_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="4"
        android:inputType="numberPassword"
        android:layout_marginBottom="@dimen/fifteen_dp"/>

    <com.cluster.ui.EditText
        android:id="@+id/customer_phone_et"
        style="@style/defaultEditText"
        android:hint="@string/customer_phone_number_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:maxLength="11"
        android:layout_marginBottom="@dimen/fifteen_dp"/>


    <com.cluster.ui.EditText
        android:id="@+id/customer_token_et"
        style="@style/defaultEditText"
        android:hint="Customer Token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:layout_marginBottom="@dimen/fifteen_dp"/>

    <com.cluster.ui.CustomButton
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_warning"
        android:text="@string/submit"
        android:layout_marginLeft="@dimen/form_margin_horizontal"
        android:layout_marginRight="@dimen/form_margin_horizontal"
        style="@style/button_style"/>
</LinearLayout>
