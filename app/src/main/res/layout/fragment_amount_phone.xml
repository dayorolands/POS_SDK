<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_bank"
        android:layout_marginLeft="@dimen/form_margin_horizontal"
        android:layout_marginRight="@dimen/form_margin_horizontal"
        android:layout_marginTop="15dp"/>
    <Spinner
        android:id="@+id/destination_bank_spinner"
        android:layout_width="match_parent"
        style="@style/defaultEditText"
        android:layout_height="wrap_content"
        android:clickable="false" />

    <com.cluster.ui.EditText
        android:id="@+id/amount_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/defaultEditText"
        android:inputType="numberDecimal"
        android:hint="@string/enter_amount"
        android:layout_marginBottom="@dimen/ten_dp"/>


    <com.cluster.ui.EditText
        android:id="@+id/customer_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:maxLength="11"
        style="@style/defaultEditText"
        android:hint="@string/customer_phone_number_hint"
        android:layout_marginBottom="@dimen/ten_dp"/>


    <com.cluster.ui.EditText
        android:id="@+id/customer_otp_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        style="@style/defaultEditText"
        android:hint="@string/enter_customer_otp"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin_horizontal"
        android:layout_marginRight="@dimen/form_margin_horizontal"
        style="@style/button_style"
        android:text="@string/submit"
        android:layout_marginTop="@dimen/twenty_five_dp"/>

    <!--<Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:text="@string/continue_"
        android:layout_marginTop="@dimen/ten_dp"/>-->

</LinearLayout>