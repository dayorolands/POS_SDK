<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_dialogheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"

        android:text="An Issue Has Occured "
        android:background="@android:color/holo_orange_light"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <ProgressBar
            android:id="@+id/notification_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:indeterminate="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/notification_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:textStyle="bold"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="4">


        <Button
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_weight="1"
            android:text="@string/retry"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_save_offline"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:text="@string/save_offline"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
           style="@style/button_warning_style"
            android:clickable="true"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>