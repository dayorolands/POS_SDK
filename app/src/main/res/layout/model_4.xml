<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/rectangle">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/customer_name"
        android:textSize="@dimen/small_sized_text"
        android:layout_weight="1"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/customer_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customer_name"
        android:gravity="center"
        android:textSize="@dimen/medium_sized_text"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_weight="1"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/customer_phone_number"
        android:textSize="@dimen/small_sized_text"
        android:layout_weight="1"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/customer_phone_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phoneNo"
        android:gravity="center"
        android:textSize="@dimen/medium_sized_text"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/product"
            android:textSize="@dimen/small_sized_text"
            android:layout_weight="1"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textSize="@dimen/small_sized_text"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/five_dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/product_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/product"
            android:textSize="@dimen/medium_sized_text"
            android:layout_weight="1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/from_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textSize="@dimen/medium_sized_text"
            android:textStyle="bold"
            android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phoneNo"
            android:textSize="@dimen/small_sized_text"
            android:layout_weight="1"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/small_sized_text"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/five_dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/phone_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phoneNo"
            android:textSize="@dimen/medium_sized_text"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/medium_sized_text"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>