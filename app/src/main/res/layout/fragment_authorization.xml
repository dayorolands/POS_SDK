<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.appzonegroup.app.fasttrack.ui.EditText
                android:id="@+id/accountDetails_bvn_et"
                style="@style/defaultEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customersBVNHint"
                android:inputType="number"
                android:maxLength="11" />

            <com.appzonegroup.app.fasttrack.ui.EditText
                android:id="@+id/customer_name_et"
                style="@style/defaultEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/customer_name"
                android:inputType="text" />

            <com.appzonegroup.app.fasttrack.ui.EditText
                android:id="@+id/auth_agentPIN_et"
                style="@style/defaultEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/agentPIN_hint"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <com.appzonegroup.app.fasttrack.ui.CustomButton
                android:id="@+id/button_update_bvn"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/gradient_warning"
                android:text="@string/updateBVN" />

        </LinearLayout>

    </ScrollView>
</layout>