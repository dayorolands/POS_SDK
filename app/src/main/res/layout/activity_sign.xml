<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.appzonegroup.app.fasttrack.ui.TextView
            android:id="@+id/signin_instructionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/form_margin_horizontal"
            android:layout_marginRight="@dimen/form_margin_horizontal"
            android:text="@string/sign_in_menu"/>


        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/signin_agentActivation_phoneNumberEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phoneNumber_hint"
            android:drawableStart="@drawable/ic_phone"
            android:drawableLeft="@drawable/ic_phone"
            android:inputType="phone"
            style="@style/defaultEditText"/>

        <com.appzonegroup.app.fasttrack.ui.EditText
            android:id="@+id/signin_agentActivation_PINEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enterPIN"
            android:drawableStart="@drawable/ic_password"
            android:drawableLeft="@drawable/ic_password"
            style="@style/defaultEditText"
            android:inputType="numberPassword"/>


        <com.appzonegroup.app.fasttrack.ui.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/gradient_primary"
            android:layout_marginLeft="@dimen/form_margin_horizontal"
            android:layout_marginRight="@dimen/form_margin_horizontal"
            android:onClick="signin"/>

    </LinearLayout>

</LinearLayout>