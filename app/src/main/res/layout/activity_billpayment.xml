<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Phone" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="number"
                android:maxLength="11" />

            <TextView
                android:id="@+id/billpayment_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/billpayment_amount_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/fieldone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field One" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/billpayment_fieldone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/fieldtwo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field Two" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/billpayment_fieldtwo_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/customer_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Email (optional)" />

            <com.creditclub.ui.widget.EditText
                android:id="@+id/customer_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />

            <Button
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="makeBillPayment"
                android:text="@string/Pay" />

        </LinearLayout>


    </ScrollView>
</layout>