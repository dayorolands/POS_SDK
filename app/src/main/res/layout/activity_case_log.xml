<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CaseLogActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                app:contentInsetStartWithNavigation="0dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="goBack"
                    android:padding="20dp"
                    app:srcCompat="@drawable/ic_arrow_back" />

                <com.appzonegroup.app.fasttrack.ui.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Case Logging"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/nested_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:padding="15dp">

                <include
                    android:id="@+id/subject"
                    layout="@layout/text_field"
                    app:hint='@{"Subject"}' />

                <include
                    android:id="@+id/description"
                    layout="@layout/text_field"
                    app:hint='@{"Description"}' />

                <include
                    android:id="@+id/email"
                    layout="@layout/text_field"
                    app:hint='@{"Agent Email"}' />

                <com.appzonegroup.app.fasttrack.ui.Picker
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:label='@{"Categories"}' />

                <com.appzonegroup.app.fasttrack.ui.Picker
                    android:id="@+id/products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:label='@{"Products"}' />

                <include
                    android:id="@+id/agent_pin"
                    layout="@layout/text_field"
                    app:hint='@{"Agent PIN"}'
                    app:maxLength='@{4}'
                    app:inputType='@{"numberPassword"}' />
            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp">

            <Button
                android:id="@+id/next_btn"
                style="@style/AppTheme.RoundButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Log Case" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>
