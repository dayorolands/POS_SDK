<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        tools:activity="com.cluster.ChangeCustomerPinActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.cluster.ui.EditText
                android:id="@+id/old_pin"
                android:hint="@string/old_pin"
                style="@style/defaultEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:inputType="numberPassword" />

            <com.cluster.ui.EditText
                android:id="@+id/new_pin"
                android:hint="@string/new_pin"
                style="@style/defaultEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="4" />


            <com.cluster.ui.EditText
                android:id="@+id/confirm_new_pin"
                style="@style/defaultEditText"
                android:hint="@string/confirm_new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:layout_marginBottom="@dimen/fifteen_dp" />


            <com.cluster.ui.CustomButton
                android:id="@+id/change_pin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_warning"
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/form_margin_horizontal"
                android:layout_marginRight="@dimen/form_margin_horizontal"
                style="@style/button_style" />

        </LinearLayout>
    </ScrollView>
</layout>
