<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:height="4dp">
                    <solid android:color="@color/colorPrimaryDark" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:bottom="5dp">
                <shape>
                    <gradient android:angle="-90" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimaryDark" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="5px">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
                    <corners android:radius="30dp" />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>
