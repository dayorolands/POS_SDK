<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape android:height="4dp">
                <solid android:color="#7659ff"/>
                <!-- alttan gölge -->
                <corners android:radius="@dimen/button_radius"/>
            </shape>
        </item>
        <!-- BUTTON alttan gölge
          android:right="5px" to make it round-->
        <item
            android:bottom="5dp">
            <shape>
                <gradient
                    android:startColor="#ad59ff"
                    android:endColor="#7659ff"
                    android:angle="0" />
                <corners
                    android:radius="@dimen/button_radius"/>
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <!-- SHADOW -->

        <!-- BUTTON -->
        <item android:bottom="5px">
            <shape>
                <gradient
                    android:startColor="#654ddb"
                    android:endColor="#654ddb"
                    android:angle="270" />
                <corners
                    android:radius="@dimen/button_radius"/>

            </shape>
        </item>
    </layer-list>
</item>
</selector>
