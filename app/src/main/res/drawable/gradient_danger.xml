<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape android:height="4dp">
                <solid android:color="#ff386a"/>
                <!-- alttan gölge -->
                <corners android:radius="@dimen/button_radius"/>
            </shape>
        </item>
        <!-- BUTTON alttan gölge
          android:right="5px" to make it round-->
        <item
            android:bottom="5dp">
            <shape>
                <padding android:bottom="5dp"/>
                <gradient
                    android:startColor="#ff38ac"
                    android:endColor="#ff386a"
                    android:angle="0" />
                <corners
                    android:radius="@dimen/button_radius"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <!-- BUTTON -->
        <item android:bottom="5px">
            <shape>
                <padding android:bottom="5dp"/>
                <gradient
                    android:startColor="#db305b"
                    android:endColor="#db305b"
                    android:angle="270" />
                <corners
                    android:radius="@dimen/button_radius"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>
