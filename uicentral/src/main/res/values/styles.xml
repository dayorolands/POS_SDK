<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/thirty_dp</item>
    </style>

    <style name="AppButton.Round.Primary" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_round_clickable_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Round.Accent" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_round_clickable_accent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>
