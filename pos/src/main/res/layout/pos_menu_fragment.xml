<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menuBackground"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:title="POS" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBar"
            tools:context=".PosMenuFragment">

            <LinearLayout
                android:id="@+id/cont"
                style="@style/AppTheme.MenuLayout"
                android:paddingBottom="20dp">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/main_menu"
                    style="@style/AppTheme.MenuFlexLayout">

                    <include
                        android:id="@+id/purchase_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_purchase}'
                        app:text='@{@string/pos_card_purchase}' />

                    <include
                        android:id="@+id/cash_back_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_purchase}'
                        app:text='@{"Purchase with CashBack"}' />

                    <include
                        android:id="@+id/refund_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_purchase}'
                        app:text='@{"Refund"}' />

                    <include
                        android:id="@+id/reversal_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reversal}'
                        app:text='@{"Reversal"}' />

                    <include
                        android:id="@+id/auth_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_auth}'
                        app:text='@{"Pre auth"}' />

                    <include
                        android:id="@+id/sales_completion_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_auth}'
                        app:text='@{"Sales Completion"}' />

                    <include
                        android:id="@+id/balance_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reversal}'
                        app:text='@{"Balance Inquiry"}' />

                    <include
                        android:id="@+id/cash_adv_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_cash_out}'
                        app:text='@{"cash adv"}' />

                    <include
                        android:id="@+id/eod_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_cash_out}'
                        app:text='@{"End of day"}' />

                    <include
                        android:id="@+id/admin_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_admin}'
                        app:text='@{"admin"}' />

                    <include
                        android:id="@+id/reprint_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reprint}'
                        app:text='@{"reprint"}' />

                    <include
                        android:id="@+id/unsettled_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_schedule}'
                        app:text='@{"unsettled"}' />

                    <include
                        android:id="@+id/chargeback_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_purchase}'
                        app:text='@{"chargeback dispute"}' />

                    <include
                        android:id="@+id/key_download_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reprint}'
                        app:text='@{"Download Keys"}' />

                    <include
                        android:id="@+id/parameter_download_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reprint}'
                        app:text='@{"Download Parameters"}' />

                    <include
                        android:id="@+id/capk_download_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reprint}'
                        app:text='@{"Download CAPK"}' />

                    <include
                        android:id="@+id/emv_aid_download_button"
                        layout="@layout/card_menu_button"
                        app:src='@{@drawable/ic_reprint}'
                        app:text='@{"Download EMV AID"}' />
                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</layout>