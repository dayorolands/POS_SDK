<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/posColorPrimary</item>
        <item name="colorPrimaryDark">@color/posColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rajdani_font</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppButton.Base" parent="Base.Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/thirty_dp</item>
    </style>
    <style name="AppButton.RoundOrangeButton" parent="AppButton.Base">
        <item name="android:background">@drawable/round_orange_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppButton.RoundWhiteButton" parent="AppButton.Base">
        <item name="android:background">@drawable/round_white_button</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppButton.MoneyButton" parent="AppButton.RoundBlueButton">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">10dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppButton.RoundBlueButton" parent="AppButton.Base">
        <item name="android:background">@drawable/round_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppButton.NumberButton" parent="AppButton.Base">
        <item name="android:background">@drawable/number_button</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="AppButton.POSAction" parent="AppButton.RoundBlueButton">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">textStart</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <dimen name="thirty_dp">30dp</dimen>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.MenuLayout">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme.MenuFlexLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="alignContent">center</item>
        <item name="alignItems">center</item>
        <item name="flexWrap">wrap</item>
        <item name="justifyContent">space_evenly</item>
        <item name="layout_flexGrow">1</item>
        <item name="layout_flexShrink">1</item>
        <item name="layout_maxWidth">300dp</item>
        <item name="layout_minWidth">80dp</item>
    </style>
</resources>